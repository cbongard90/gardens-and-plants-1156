<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>
<div class="container">
  <h2>You currently have <%= pluralize(@plants.count, 'plant') %></h2>
  <div class="row">
    <% @plants.each do |plant| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
        <%= plant.name %>
        <%= link_to '+', plant_path(plant), data:{turbo_method: :delete, turbo_confirm: "Are you sure you want to delete #{plant.name}?"}, class:'card-remove-link' %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-4">
      <h3>Add a plant</h3>
      <%= simple_form_for [@garden, @plant] do |f| %>
        <%= f.input :name, placeholder: 'Palm Tree' %>
        <%= f.input :image_url, placeholder:'www.some_nice_image.com' %>
        <%= f.submit 'Add', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'Go Back', root_path %>
